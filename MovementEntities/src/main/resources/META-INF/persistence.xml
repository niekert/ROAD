<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="MovementPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/ROAD</jta-data-source>
        <class>entities.Connection</class>
        <class>entities.Edge</class>
        <class>entities.JunctionRequest</class>
        <class>entities.Junction</class>
        <class>entities.Lane</class>
        <class>entities.Movement</class>
        <class>entities.MovementMap</class>
        <class>entities.MovementVehicle</class>
        <class>entities.Vehicle</class>
        <class>entities.VehicleOwnership</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.transaction.jta.platform"
                      value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <!--<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@//172.16.239.133:1521/aidas"/>-->
            <!--<property name="javax.persistence.jdbc.password" value="aidas123"/>-->
            <!--<property name="javax.persistence.jdbc.user" value="aidas"/>-->
        </properties>


    </persistence-unit>
</persistence>
